@model IEnumerable<string>

@Html.ActionLink("Home","List","User", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "User",
    action = "List",
    role = link,
    page = 1,
},
    new {
        @class = "btn btn-block btn-default btn-lg"
        + (link == ViewBag.SelectedRole? " btn-primary" : "")
        }
    )
}